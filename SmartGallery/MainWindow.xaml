<Window x:Class="SmartGallery.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" WindowState="Maximized">
<Grid>
    <ScrollViewer>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal">
                <Label Content="Image Folder.."/>
                <TextBox x:Name="txtImageFolder" IsReadOnly="True" Style="{StaticResource MyWaterMarkStyle}" Height="25" Width="200" HorizontalAlignment="Left"/>
                <TextBox x:Name="txtSearch" Style="{StaticResource MyWaterMarkStyle}" Tag="Search for a thing or people..." Height="25" Width="200" HorizontalAlignment="Left" TextChanged="txtSearch_TextChanged"/>
            </StackPanel>
        
    <ItemsControl Margin="20" x:Name="lb" ItemsSource="{Binding images}" ScrollViewer.HorizontalScrollBarVisibility="Visible">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Border Background="DarkGray" BorderThickness="2" MouseLeftButtonDown="Image_MouseDown">
                    <Border.Style>
                <Style TargetType="Border">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="Green" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
                <StackPanel Orientation="Vertical">
                    <Image Source="{Binding Path}" Stretch="Uniform" Height="150" Width="150" Margin="10"/>
                    <Label Content="{Binding PredictedLabel}"/>
                </StackPanel>
                    </Border>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel IsItemsHost="True" Orientation="Horizontal"  />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>
            </StackPanel>
        </ScrollViewer>
</Grid>
</Window>